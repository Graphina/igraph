
XML_INC_DIR=${LIB_XML}/include
XML_LIB_DIR=${LIB_XML}/bin

PKG_CPPFLAGS= ${XML_INC_DIR:%=-I%} -I${LIB_XML}/include/libxml2 -DUSING_R -DHAVE_FMEMOPEN=0 -DHAVE_OPEN_MEMSTREAM=0 -DHAVE_RINTF -DWin32 -DHAVE_LIBXML -Wall -I${LIB_ICONV}/include -DPACKAGE_VERSION=\"0.5.5\" -DHAVE_FMIN=1 -DHAVE_LOG2=1 -DHAVE_SNPRINTF

ifeq "$(WIN)" "64"
  PKG_LIBS= -L${XML_LIB_DIR} -lxml2-2
else
  PKG_LIBS= -L${XML_LIB_DIR} -lxml2 
endif
